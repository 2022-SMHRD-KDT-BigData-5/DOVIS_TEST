<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.smhrd.mapper.MemberMapper">
    
    <!-- sql 작성 -->
	<insert id="insertMember"
		parameterType="com.smhrd.domain.Members">
		insert into members values (members_no_seq.nextval, #{member_id}, #{member_pw}, #{email}, #{member_name}, #{member_dept}, #{member_job})
	</insert>

	<select id="selectMember"
		parameterType="com.smhrd.domain.Members"
		resultType="com.smhrd.domain.Members">
		select * from members 
		where member_id=#{member_id} and member_pw=#{member_pw}
	</select>
	
	<select id="memberList" resultType="com.smhrd.domain.Members">
		select * from members
	</select>
    
</mapper>